extends layout

block vars
    - var title = 'Projects'
    - var active = 'projects'

block content
    aside(role='complementary')
        ul
            li.header.expandable.expanded.active
                a(href='#') Code

                ul
                    li
                        a(href='#code-android') Android
                    li
                        a(href='#code-web') Web
                    li
                        a(href='#code-lowlevel') Low Level

            li.header.expandable
                a(href='#talks') Talks

                ul
                    li
                        a(href='#talks-2012') 2012

                    li
                        a(href='#talks-2013') 2013

            li.header.expandable
                a(href='#papers') Papers

                ul
                    li
                        a(href='#writing-tp') Transfer Projects

                    li
                        a(href='#writing-thesis') Thesis

    section(role='main')
        .content.menu
            h1 Projects
            h2 Code
                a(id='code')


            div.tile-screen(expandable-tiles=".tile-screen-brick")
                a(id='code-android')

                div.medium.tile-screen-brick.android(style='background-image: url(/images/projects/scdl.jpg)')
                    header Downloader for SoundCloud
                    .inner
                        p.description
                            | An Android app that allows you to download songs
                            | from SoundCloud with some 500&nbsp;000 downloads.
                        footer
                            a.gplay.holo-button(href='https://play.google.com/store/apps/details?id=net.rdrei.android.scdl2')
                                | Download from Google Play

                div.tile-screen-brick.android(style='background-image: url(images/projects/wakimail.jpg)')
                    header WAKiMail
                    .inner
                        p.description
                            | An email client for my university's bugged
                            | messaging platform.
                        footer
                            a.gplay.holo-button(href='https://play.google.com/store/apps/details?id=net.rdrei.android.wakimail')
                                | Download from Google Play
                            a.github.holo-button(href='https://github.com/passy/wakimail')
                                | Fork on Github

                div.tile-screen-brick.android(style='background-image: url(images/projects/simstatus.jpg)')
                    header SimCity Server Status
                    .inner
                        p.description
                            | An apps that tells you whether SimCity 2013 is
                            | playable or not.
                        footer
                            a.gplay.holo-button(href='https://play.google.com/store/apps/details?id=net.rdrei.android.simstatus')
                                | Download from Google Play

                div.tile-screen-brick.android(style='background-image: url(images/projects/dirchooser.jpg)')
                    header Android-DirectoryChooser
                    .inner
